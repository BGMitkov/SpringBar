<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/aop 
   http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<bean id="item" class="bar.model.Item">
	</bean>
	<bean id="user" class="bar.model.User">
	</bean>
	<bean id="order" class="bar.model.Order">
	</bean>
	<bean id="bill" class="bar.model.Bill">
	</bean>

	<bean id="userContext" class="bar.services.UserContext" scope="session">
		<property name="user"></property>
	</bean>
	<bean id="userController" class="bar.services.UserController">
		<property name="userContext"></property>
		<aop:scoped-proxy/>
	</bean>
</beans>